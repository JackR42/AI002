// .devcontainer/devcontainer.json
{
  "name": "SQL Server Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "ports": [
    "1433:1433" // Map the container port to your local machine
  ],
  "forwardPorts": [
    1433
  ],
  "postCreateCommand": "sqlcmd -S localhost -U sa -P YourStrongPassword123! -Q \"CREATE DATABASE MyDatabase;\"" // Example: Create a database on startup
}
